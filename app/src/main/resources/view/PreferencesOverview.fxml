<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="126.0" prefWidth="387.0" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/8.0.65"
            fx:controller="cz.muni.physics.pdr.app.controller.PreferencesOverviewController">
    <children>
        <GridPane layoutX="161.0" layoutY="62.0" prefHeight="78.0" prefWidth="387.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="139.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="305.0" minWidth="10.0" prefWidth="211.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="259.0" minWidth="10.0" prefWidth="33.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="%label.app.data.dir"/>
                <Label text="%label.plugins.root" GridPane.rowIndex="1"/>
                <TextField fx:id="appDataRootTextField" editable="false"
                           styleClass="input-group-left" GridPane.columnIndex="1"/>
                <TextField fx:id="pluginsRootTextField" editable="false" styleClass="input-group-left"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#handleAppDataRootButton" styleClass="input-group-right"
                        text="..." GridPane.columnIndex="2"/>
                <Button mnemonicParsing="false" onAction="#handlePluginsRootButton" styleClass="input-group-right"
                        text="..." GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <ButtonBar layoutX="132.0" layoutY="83.0" prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <buttons>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancelButton"
                        text="%button.cancel"/>
                <Button fx:id="applyButton" layoutX="140.0" layoutY="17.0" mnemonicParsing="false"
                        onAction="#handleApplyButton" text="%button.apply"/>
                <Button defaultButton="true" layoutX="140.0" layoutY="17.0" mnemonicParsing="false"
                        onAction="#handleOkButton" text="%button.ok"/>
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
